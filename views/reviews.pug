extends includes/side-nav-layout.pug

block content
    h1.reviews-heading Makeup Reviews
    div.reviews
        each val in makeupData
            section.reviews__section
                p.reviews-text-heading Makeup Name 
                    p.reviews-text-data= val.name
                p.reviews-text-heading Brand
                    p.reviews-text-data= val.brand 
                p.reviews-text-heading Type of Makeup 
                    p.reviews-text-data= val.type 
                p.reviews-text-heading Description 
                    p.reviews-text-desc= val.description 
                p.reviews-text-heading Price 
                    p.reviews-text-data= '$' + val.price
        section.reviews__card
            section.reviews__card-face.front 
                img.card-foto(src="/static/img/too-faced.jpg")
            section.reviews__card-face.back 
                p.card-text Name: Born This Way
                p.card-text Brand: Too Faced 
                p.card-text Type: Foundation 
                p.card-text $45
                p.card-text A foundation with a radiant finish. This foundation sets well, stays well, and doesn't cake.